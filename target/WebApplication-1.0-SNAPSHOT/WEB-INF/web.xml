<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!--Parametre pour Base de donnÃ©es -->
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPass</param-name>
        <param-value>root</param-value>
    </context-param>
    <!--Filters -->
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>fr.m2i.webapplication.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/HomeServlet</url-pattern>
    </filter-mapping>
    <!--Listeners -->
    <listener>
        <description>ServletContextListener</description>
        <listener-class>fr.m2i.webapplication.listener.LifeCycleListener</listener-class>
    </listener>
    <!--Servlet -->
    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>fr.m2i.webapplication.FirstServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SecondServlet</servlet-name>
        <servlet-class>fr.m2i.webapplication.SecondServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowIPAdress</servlet-name>
        <servlet-class>fr.m2i.webapplication.ShowIPAdress</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowRequestHeaders</servlet-name>
        <servlet-class>fr.m2i.webapplication.ShowRequestHeaders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EvenNumberServlet</servlet-name>
        <servlet-class>fr.m2i.webapplication.EvenNumberServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CountWordsServlet</servlet-name>
        <servlet-class>fr.m2i.webapplication.CountWordsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrimeNumberServlet</servlet-name>
        <servlet-class>fr.m2i.webapplication.PrimeNumberServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DistributeurServlet</servlet-name>
        <servlet-class>fr.m2i.webapplication.DistributeurServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>fr.m2i.webapplication.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>fr.m2i.webapplication.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>fr.m2i.webapplication.HomeServlet</servlet-class>
    </servlet>
    <!--Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/FirstServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecondServlet</servlet-name>
        <url-pattern>/SecondServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowIPAdress</servlet-name>
        <url-pattern>/ShowIPAdress</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowRequestHeaders</servlet-name>
        <url-pattern>/ShowRequestHeaders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EvenNumberServlet</servlet-name>
        <url-pattern>/EvenNumberServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CountWordsServlet</servlet-name>
        <url-pattern>/CountWordsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrimeNumberServlet</servlet-name>
        <url-pattern>/PrimeNumberServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DistributeurServlet</servlet-name>
        <url-pattern>/DistributeurServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>
    <!--Session Config -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
